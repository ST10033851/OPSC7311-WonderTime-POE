<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@drawable/dialogbg">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_remove_24"
        android:layout_gravity="center|top"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/createText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:textAlignment="viewStart"
            android:text="Create Timesheet"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/saveTimesheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:text="Create"
            android:textColor="@color/purple"
            android:layout_marginStart="80dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="29dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/mplus_rounded"
            android:textStyle="bold"
            android:text="Date:"
            />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp"
            android:background="@drawable/input_border_light"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/DateInput"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="DD - MM - YYYY"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/mplus_rounded"
                android:padding="18dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/datePickerBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/calender_icon"/>

        </LinearLayout>

    </LinearLayout>

    <nl.joery.timerangepicker.TimeRangePicker
        android:layout_marginStart="40dp"
        android:id="@+id/picker"
        android:layout_width="300dp"
        android:layout_height="2000dp"
        app:trp_thumbSize="25dp"
        app:trp_sliderWidth="29dp"
        app:trp_thumbColor="@android:color/white"
        app:trp_thumbIconColor="@color/white"
        app:trp_sliderRangeGradientStart="#4568DC"
        app:trp_sliderRangeGradientMiddle="#4568DC"
        app:trp_sliderRangeGradientEnd="#f64f59"
        app:trp_clockFace="APPLE"
        app:trp_hourFormat="FORMAT_12"
        app:trp_thumbSizeActiveGrow="1.0f"
        app:trp_thumbIconEnd="@drawable/round_play_arrow_24"
        app:trp_thumbIconStart="@drawable/round_stop_24"
        app:trp_thumbIconSize="25dp"
        android:layout_marginBottom="10dp"
        app:trp_endTime="6:30"
        app:trp_startTime="22:00" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start:"
                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_marginEnd="100dp"
                app:boxBackgroundMode="none">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/timer_button"
                    android:elevation="30dp"
                    android:gravity="center"
                    android:hint="22:00"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:id="@+id/StartTimeInput"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="End:"
                android:textSize="15sp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_marginEnd="150dp"
                app:boxBackgroundMode="none">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/timer_button"
                    android:elevation="30dp"
                    android:gravity="center"
                    android:hint="22:00"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:id="@+id/EndTimeInput"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cat2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/mplus_rounded"
            android:textStyle="bold"
            android:text="Date:"
            />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/input_border_light"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/UploadImageBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/attach_icon"/>

            <EditText
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Add an image (Optional)"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/mplus_rounded"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="16sp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/UploadImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:layout_marginStart="-60dp"
                android:scaleType="centerCrop"
                android:elevation="2dp"
                android:src="@drawable/test_image"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="29dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/mplus_rounded"
            android:textStyle="bold"
            android:text="Desciption:"
            />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/input_border_light"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/DescriptionInput"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter a description"
                android:background="@null"
                android:fontFamily="@font/mplus_rounded"
                android:padding="18dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="16sp" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>